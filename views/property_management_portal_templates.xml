<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="property">
        <t t-call="website.layout">
            <t t-set="title">Rental/Lease</t>
            <div class="oe_structure">
                <div class="container">
                    <t t-foreach="property" t-as="property">
                        <p><t t-esc="property.name"/></p>
                        <img t-att-src="'data:image/jpeg;base64,%s' % property.image" alt="Property Image"/>
                        <p><t t-esc="property.rent_amount"/></p>
                        <p><t t-esc="property.lease_amount"/></p>
                    </t>
                </div>
            </div>
        </t>
    </template>
</odoo>